<%= form_for(@payment, html: { class: "custom"}) do |f| %>
   <div class="row">
     <div class="small-3 columns">
       <%= f.label :amount, class: "right inline"%>
     </div>
     <div class="small-5 columns end">
       <%= f.number_field(:amt, min: 0.10, step: 0.01) %>
     </div> 
   </div>
   <div class="row">   
     <div class="small-3 columns">
        <%= f.label :account, class: "right inline"%>
     </div>
     <div class="small-5 columns end">
        <%= select(:payment, :account, options_for_select(account_selector, @payment.account.try(:id)), {include_blank: 'None'}) %>
     </div> 
   </div>
   <div class="row">   
     <div class="small-3 columns">
        <%= f.label :due_date, class: "right inline"%>
     </div>
     <div class="small-5 columns end">
        <%= f.text_field :due_date, :class => "date-picker", :placeholder => "New Date" %>
     </div> 
   </div>
   <div class="row">   
     <div class="small-3 columns">
        <%= f.label :reminder, class: "right inline"%>
     </div>
     <div class="small-5 columns end">
        <%= f.text_field :reminder, :class => "date-picker", :placeholder => "Set Reminder" %>
     </div> 
   </div>
   <div class="row">
     <div class="small-5 small-offset-3 columns">
       <%= f.submit 'Submit', :class => 'button small' %>
     </div>
   </div>
<% end %>

